# --------------
# Powerlevel10k Instant Prompt
# --------------
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

typeset -g POWERLEVEL9K_INSTANT_PROMPT=quiet
source /home/linuxbrew/.linuxbrew/share/powerlevel10k/powerlevel10k.zsh-theme

# --------------
# Oh My Zsh Configuration
# --------------
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git grc colorize zsh-autosuggestions zsh-syntax-highlighting fast-syntax-highlighting colored-man-pages)
source $ZSH/oh-my-zsh.sh

# --------------
# Path Management
# --------------
export PATH="$PATH:/home/nexxsys/.local/bin"
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

# --------------
# Terminal Settings
# --------------
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export FZF_DEFAULT_OPTS="
  --header='CTRL-c or ESC to quit'
  --style=minimal 
  --height=80% 
  --layout=reverse 
  --info=inline 
  --border=rounded
  --prompt='▶' 
  --pointer='→' 
  --marker='♡'
  --border-label=Fuzzy-Finder
  --preview 'bat --color=always --style=grid,numbers {}' 
  --preview-window 'down,60%,border-bottom,+{2}+3/3,~3' 
"
source <(fzf --zsh)

# --------------
# Aliases
# --------------
# Core Aliases
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -iv'
alias mkdir='mkdir -p'
alias cls='clear'
alias apt-get='sudo apt-get'
alias psa='ps auxf'
alias psgrep="ps aux | grep -v grep | grep -i -e VSZ -e"
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"

# File and Directory Management
alias la='lsd -Alh'
alias ls='lsd -l --color=auto'
alias lr='lsd -lRh'
alias lt='lsd -ltrh'
alias ll='lsd -alFh'
alias lf="lsd -l | egrep -v '^d'"
alias ldir="lsd -l | egrep '^d'"
alias l='lsd'
alias lsdtree='lsd --tree -d'

# Networking and System
alias sysup="sudo apt update && sudo apt full-upgrade -y && sudo apt autoremove -y && sudo apt autoclean -y"
alias topcpu="/bin/ps -eo pcpu,pid,user,args | sort -k 1 -r | head -10"
alias ping='ping -c 10'
alias openports='netstat -nape --inet'

# Scripting and Utilities
alias pyserver='python3 -m http.server'
alias xclip='xclip -selection c'
alias p='ps aux | grep '
alias countfiles="bash -c 'for t in files links directories; do echo $(find . -type ${t:0:1} | wc -l) $t; done 2> /dev/null'"

# --------------
# Functions
# --------------
function hex-encode() {
  echo "$@" | xxd -p
}

function hex-decode() {
  echo "$@" | xxd -p -r
}

function rot13() {
  echo "$@" | tr 'A-Za-z' 'N-ZA-Mn-za-m'
}

# --------------
# Miscellaneous
# --------------
eval $(thefuck --alias)
eval $(thefuck --alias FUCK)

# --------------
# Powerlevel10k Configuration
# --------------
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
